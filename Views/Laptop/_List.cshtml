@model IEnumerable<McIntashLaptops.Models.LaptopModel>

<div id="listed" data-present="present" />
<table class="table table-light table-hover">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriveSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraphicsCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperatingSystem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row-number-@item.Id">
  
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Processor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ram)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriveSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GraphicsCard)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OperatingSystem)
                </td>

                <td>
                    <a href="/Laptop/ShowOneLaptop/@item.Id" class="btn btn-primary w-100">Show Details</a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-warning edit-laptop-button w-100" value="@item.Id" data-bs-toggle="modal" data-bs-target="#editForm">
                        Edit
                    </button>
                    <a href="/Laptop/Delete/@item.Id" class="btn btn-danger w-100">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_editModal" />
