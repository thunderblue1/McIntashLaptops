@model IEnumerable<McIntashLaptops.Models.LaptopModelDTO>

<div class="container">
    <div class="row">
        <h1>Shopping Cart</h1>
    </div>
    <div class="row pt-3">
        <a href="/Shop/Checkout" class="btn btn-success w-50">Checkout</a>
    </div>
    <div class="row pt-3">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Processor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ram)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DriveSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GraphicsCard)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Weight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OperatingSystem)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShortDescription)
                    </th>
                    <th></th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-number-@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Photo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Processor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ram)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DriveSize)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GraphicsCard)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Weight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OperatingSystem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortDescription)
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger remove-from-cart-button w-100" value="@item.Id">
                                Remove
                            </button>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            <button type="button" class="btn btn-success add-one-to-cart-button w-100" value="@item.Id">
                                Add
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

